{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "builder": "DOCKERFILE",
        "dockerfilePath": "Dockerfile.backend"
    },
    "deploy": {
    "startCommand": "uvicorn main:app --host 0.0.0.0 --port 8000", 
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 10
    }
}
